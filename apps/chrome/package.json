{
  "name": "@poketto/chrome",
  "version": "0.0.0",
  "displayName": "Poketto",
  "description": "Yoji poketto",
  "scripts": {
    "dev": "vite --config ./config/vite.config.web.ts",
    "dev:ext": "npm run clear && cross-env NODE_ENV=development run-p dev:ext:*",
    "dev:ext:prepare": "esno scripts/prepare.ts",
    "dev:ext:popup": "vite build --config ./config/vite.config.popup.ts --watch",
    "dev:ext:pages": "esno scripts/buildPages.ts",
    "build": "vite build --config ./config/vite.config.web.ts",
    "build:ext": "npm run clear && cross-env NODE_ENV=production run-p build:ext:*",
    "build:ext:prepare": "esno scripts/prepare.ts",
    "build:ext:popup": "vite build --config ./config/vite.config.popup.ts",
    "build:ext:pages": "esno scripts/buildPages.ts",
    "clear": "rimraf extension/dist extension/manifest.json extension.*"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@hookform/resolvers": "^2.9.6",
    "@mui/material": "^5.9.0",
    "@poketto/core": "0.0.0",
    "aptos": "^1.3.6",
    "buffer": "^6.0.3",
    "lodash.get": "^4.4.2",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.33.1",
    "react-hot-toast": "^2.3.0",
    "react-icons": "^4.4.0",
    "webext-bridge": "^5.0.5",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.get": "^4.4.7",
    "@types/node": "^18.0.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/webextension-polyfill": "^0.9.0",
    "@vitejs/plugin-react": "^2.0.0",
    "cross-env": "^7.0.3",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "kolorist": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "unplugin-auto-import": "^0.9.3",
    "vite": "^3.0.0",
    "web-ext": "^7.2.0",
    "webext-bridge": "^5.0.5",
    "webextension-polyfill": "^0.10.0"
  }
}
